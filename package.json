{
  "name": "rust-wasm",
  "version": "0.0.0",
  "description": "Example repo that demonstrates how to export a rust WASM binary",
  "main": "index.js",
  "scripts": {
    "prebuild": "mkdirp ./build && rimraf ./build/*",
    "build": "cargo +nightly build --target wasm32-unknown-unknown --release",
    "postbuild": "wasm-gc target/wasm32-unknown-unknown/release/module.wasm -o build/module.min.wasm",
    "pretest": "npm run build",
    "test": "standard && tap ./test.js && cargo test",
    "prepublish": "test"
  },
  "keywords": [
    "rust",
    "wasm",
    "example"
  ],
  "author": "Glen Keane",
  "license": "MIT",
  "dependencies": {
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "standard": "^11.0.0",
    "tap": "^11.1.1"
  },
  "standard": {
    "globals": [ "WebAssembly" ]
  }
}
